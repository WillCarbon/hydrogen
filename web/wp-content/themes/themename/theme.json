{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
			"background": false,
			"text": false,
			"customDuotone": false,
			"customGradient": false,
			"gradients": [],
            "defaultPalette": false,
            "palette": [
				{
					"slug": "alpha",
					"color": "var(--colour-alpha--base)",
					"name": "Blue"
				},
				{
					"slug": "bravo",
					"color": "var(--colour-bravo--base)",
					"name": "Pink"
				},
				{
					"slug": "charlie",
					"color": "var(--colour-charlie--base)",
					"name": "Yellow"
				}
			]
        },
		"dimensions": {
			"minHeight": false
		},
		"layout": {
            "contentSize": "800px",
            "wideSize": "1000px"
        },
		"typography": {
			"fontWeight": false,
			"customFontSize": false,
			"fontStyle": false,
			"textTransform": false,
			"letterSpacing": false,
			"lineHeight": false,
			"dropCap": false,
			"fontFamilies": [],
			"fontSizes": []
		},
		"blocks": {
			"carbonberg/text": {
				"color": {
					"background": true
				}
			},
			"carbonberg/image": {
				"color": {
					"background": true
				}
			},
			"carbonberg/text-image": {
				"color": {
					"background": true
				}
			},
			"carbonberg/form": {
				"color": {
					"background": true
				}
			},
			"carbonberg/accordion": {
				"color": {
					"background": true
				}
			},
			"carbonberg/video": {
				"color": {
					"background": true
				}
			},
			"core/button": {
				"color": {
					"background": true
				},
				"border": {
					"radius": false
				}
			},
			"core/columns": {
				"color": {
					"background": true
				}
			}
		}
    },
	"styles": {
		"border": {
            "radius": "var(--border-radius)"
		},
		"color": {
            "background": "var(--wp--preset--color--white)",
            "text": "var(--wp--preset--colour--black)"
        },
		"spacing": {
            "blockGap": "var(--grid-padding)"
		},
		"typography": {
			"fontFamily": "var(--font-family-alpha)",
			"fontSize": "var(--font-size-body)",
			"fontWeight": "var(--font-weight-regular)",
			"lineHeight": "var(--line-height)"
		},
		"blocks": {
			"core/button": {
				"border": {
					"radius": "100px"
				}
			}
		},
		"elements": {
			"h1": {
				"typography": {
					"fontSize": "var(--font-size-heading-1)"
				}
			},
            "h2": {
				"typography": {
					"fontSize": "var(--font-size-heading-2)"
				}
			},
            "h3": {
				"typography": {
					"fontSize": "var(--font-size-heading-3)"
				}
			},
            "h4": {
				"typography": {
					"fontSize": "var(--font-size-heading-4)"
				}
			},
            "h5": {
				"typography": {
					"fontSize": "var(--font-size-heading-5)"
				}
			},
            "h6": {
				"typography": {
					"fontSize": "var(--font-size-heading-6)"
				}
			}
		}
	}
}