{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
		"appearanceTools": false,
        "color": {
			"background": false,
			"customDuotone": false,
			"customGradient": false,
			"gradients": [],
            "defaultPalette": false,
            "palette": [
				{
					"slug": "alpha",
					"color": "var(--colour-alpha)",
					"name": "Alpha"
				},
				{
					"slug": "bravo",
					"color": "var(--colour-bravo)",
					"name": "Bravo"
				},
				{
					"slug": "charlie",
					"color": "var(--colour-charlie)",
					"name": "Charlie"
				}
			]
        },
		"dimensions": {
			"minHeight": false
		},
		"typography": {
			"fontWeight": false,
			"customFontSize": false,
			"fontStyle": false,
			"textTransform": false,
			"letterSpacing": false,
			"lineHeight": false,
			"dropCap": false,
			"fontFamilies": [],
			"fontSizes": []
		},
		"blocks": {
			"core/group": {
				"color": {
					"background": true,
					"text": false
				}
			},
			"core/media-text": {
				"color": {
					"background": true
				}
			},
			"core/button": {
				"border": {
					"radius": false
				},
				"color": {
					"text": false
				},
				"appearanceTools": false,
				"layout": {
					"allowEditing": false
				}
			}
		}
    },
	"styles": {
		"border": {
            "radius": "var(--border-radius)"
		},
		"color": {
            "background": "var(--colour-white)",
            "text": "var(--colour-black)"
        },
		"spacing": {
            "blockGap": "var(--grid-padding)"
		},
		"typography": {
			"fontFamily": "var(--font-family-alpha)",
			"fontSize": "var(--font-size-body)",
			"fontWeight": "var(--font-weight-regular)",
			"lineHeight": "var(--line-height)"
		},
		"elements": {
			"h1": {
				"color": {
					"text": "var(--colour-heading-1)"
				},
				"typography": {
					"fontSize": "var(--font-size-heading-1)"
				}
			},
            "h2": {
				"color": {
					"text": "var(--colour-heading-2)"
				},
				"typography": {
					"fontSize": "var(--font-size-heading-2)"
				}
			},
            "h3": {
				"color": {
					"text": "var(--colour-heading-3)"
				},
				"typography": {
					"fontSize": "var(--font-size-heading-3)"
				}
			},
            "h4": {
				"color": {
					"text": "var(--colour-heading-4)"
				},
				"typography": {
					"fontSize": "var(--font-size-heading-4)"
				}
			},
            "h5": {
				"color": {
					"text": "var(--colour-heading-5)"
				},
				"typography": {
					"fontSize": "var(--font-size-heading-5)"
				}
			},
            "h6": {
				"color": {
					"text": "var(--colour-heading-6)"
				},
				"typography": {
					"fontSize": "var(--font-size-heading-6)"
				}
			}
		}
	}
}