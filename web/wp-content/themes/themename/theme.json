{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
		"custom": {
			"colour": {
				"grey-dark": "#444",
				"grey-mid-dark": "#616161",
				"grey": "#7d7d7d",
				"grey-mid-light": "#b0b0b0",
				"grey-light": "#e5e5e5",
				"alpha-dark": "#335b5e",
				"alpha": "#148791",
				"alpha-light": "#7bdbe3",
				"bravo-dark": "#5e3c50",
				"bravo": "#de4ba0",
				"bravo-light": "#e392c1",
				"charlie-dark": "#ab9718",
				"charlie": "#dec51f",
				"charlie-light": "#e3d264"
			}
		},
        "color": {
			"background": false,
			"text": false,
			"customDuotone": false,
			"customGradient": false,
			"gradients": [],
            "defaultPalette": false,
            "palette": [
				{
					"slug": "alpha",
					"color": "var(--wp--custom--colour--alpha)",
					"name": "Alpha"
				},
				{
					"slug": "bravo",
					"color": "var(--wp--custom--colour--bravo)",
					"name": "Bravo"
				},
				{
					"slug": "charlie",
					"color": "var(--wp--custom--colour--charlie)",
					"name": "Charlie"
				}
			]
        },
		"dimensions": {
			"minHeight": false
		},
		"layout": {
            "contentSize": "800px",
            "wideSize": "1000px"
        },
		"typography": {
			"fontWeight": false,
			"customFontSize": false,
			"fontStyle": false,
			"textTransform": false,
			"letterSpacing": false,
			"lineHeight": false,
			"dropCap": false,
			"fontFamilies": [],
			"fontSizes": []
		},
		"blocks": {
			"carbonberg/text": {
				"color": {
					"background": true
				}
			},
			"carbonberg/image": {
				"color": {
					"background": true
				}
			},
			"carbonberg/text-image": {
				"color": {
					"background": true
				}
			},
			"carbonberg/form": {
				"color": {
					"background": true
				}
			},
			"carbonberg/accordion": {
				"color": {
					"background": true
				}
			},
			"carbonberg/video": {
				"color": {
					"background": true
				}
			},
			"core/button": {
				"color": {
					"background": true
				},
				"border": {
					"radius": false
				}
			},
			"core/columns": {
				"color": {
					"background": true
				}
			}
		}
    },
	"styles": {
		"border": {
            "radius": "var(--border-radius)"
		},
		"color": {
            "background": "var(--wp--preset--color--white)",
            "text": "var(--wp--preset--colour--black)"
        },
		"spacing": {
            "blockGap": "var(--grid-padding)"
		},
		"typography": {
			"fontFamily": "var(--font-family-alpha)",
			"fontSize": "var(--font-size-body)",
			"fontWeight": "var(--font-weight-regular)",
			"lineHeight": "var(--line-height)"
		},
		"blocks": {
			"core/button": {
				"border": {
					"radius": "100px"
				}
			}
		},
		"elements": {
			"h1": {
				"typography": {
					"fontSize": "var(--font-size-heading-1)"
				}
			},
            "h2": {
				"typography": {
					"fontSize": "var(--font-size-heading-2)"
				}
			},
            "h3": {
				"typography": {
					"fontSize": "var(--font-size-heading-3)"
				}
			},
            "h4": {
				"typography": {
					"fontSize": "var(--font-size-heading-4)"
				}
			},
            "h5": {
				"typography": {
					"fontSize": "var(--font-size-heading-5)"
				}
			},
            "h6": {
				"typography": {
					"fontSize": "var(--font-size-heading-6)"
				}
			}
		}
	}
}